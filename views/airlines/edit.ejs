<%- include("../../partials/head") %>
<section>
  <div class="container">
    <form action="/airlines/<%= airlines.slug %>?_method=PUT" method="POST">
      <h1 class="form-title">Edit <%= airlines.name %></h1>
      <div clas="form-body">
        <label for="name">Airline Name:</label>
        <input
          type="text"
          id="name"
          class="input-fields"
          name="Airline[name]"
          value="<%= airlines.name %>"
        />
        <label for="logo">Image Logo</label>
        <input
          type="text"
          id="logo"
          class="input-fields"
          name="Airline[logo]"
          value="<%= airlines.logo %>"
        />
        <label for="website">Website Address</label>
        <input
          type="text"
          id="website"
          class="input-fields"
          name="Airline[website]"
          value="<%= airlines.website %>"
        />
      </div>
      <div class="button-container">
        <button type="submit" class="btn send-btn">Update</button>
        <a href="/airlines" class="btn cancel-btn">Cancel</a>
      </div>
    </form>
  </div>
</section>
<%- include("../../partials/footer") %>
