<%- include("../../partials/head") %>

<section>
  <div class="container">
    <div class="title-container">
      <h1>
        <a href="/airlines"> <%= showPage.name %> </a>
        - <%= destinations.destinations.length %> Destinations
      </h1>
      <a
        href="/airlines/<%= showPage.slug %>/destinations/new"
        class="btn create-button"
      >
        create new destination
      </a>
    </div>
    <div class="col s12 m3 l4 xl4">
      <ul>
        <% for(let destination of destinations.destinations){ %>

        <li>
          <b><a href=""><%= destination.airport_code %></a></b> - <%=
          destination.city %>, <%= destination.state %>
        </li>

        <% } %>
      </ul>
    </div>
  </div>
</section>

<%- include("../../partials/footer") %>
