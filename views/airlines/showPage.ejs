<%- include("../../partials/head") %>

<section>
  <div class="container">
    <div class="title-container">
      <h1>
        <a href="/airlines"
          ><%= showPage.name %> (<%= destinations.destinations.length %>
          Destinations)</a
        >
      </h1>
      <a
        href="/airlines/<%= showPage.slug %>/destinations/new"
        class="btn create-button"
      >
        create new destination
      </a>
    </div>
    <div class="col l4">
      <% for(let destination of destinations.destinations){ %>
      <ul>
        <li>
          <b><a href=""><%= destination.airport_code %></b></a> - <%= destination.city %>, <%= destination.state %>
        </li>
      </ul>
      <% } %>
    </div>
  </div>
</section>

<%- include("../../partials/footer") %>
